		JButton btnSk = new JButton("S\u00F6k");
		btnSk.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				String cNumber = textField_sok.getText();
				if(controller.database.findKundBoolean(cNumber)){
					Kund kTemp = controller.database.findKund(cNumber);
					textField_name.setText(kTemp.getNamn());
					textField_kundnr.setText(kTemp.getKundnr());
					textField_fakturaadress.setText(kTemp.getFakturaadress());
					textField_leveransadress.setText(kTemp.getLeveransadress());
					textField_tfnnr.setText(kTemp.getTelefonnr());
					textField_email.setText(kTemp.getEmail());
					textField_rabattniva.setText(kTemp.getRabattniv√•());
					textField_kontaktperson.setText(kTemp.getKontaktperson());
					textField_bestallare.setText(kTemp.getBestallare());
					textField_postnr.setText(kTemp.getPostnr());
					textField_stad.setText(kTemp.getStad());
					lblsvar.setText("Customer found!");
				}else{
					lblsvar.setText("Customer not found");
				}
//				if (tmpCustomer != null){
//					textField_name.setText(tmpCustomer[0]);
//					textField_kundnr.setText(tmpCustomer[1]);
//					textField_fakturaadress.setText(tmpCustomer[2]);
