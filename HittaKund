		btnRadera.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				String cNumberRemove = textField_kundnr.getText();
				kontroller.removeCustomer(cNumberRemove);
				lblsvar.setText("Customer Removed");
				textField_name.setText("");
				textField_kundnr.setText("");
