package allt;

import java.util.*;

public class Databas {
	
	private ArrayList<Kund> kunder = new ArrayList<Kund>();
	
	private ArrayList<Produkt> produkter = new ArrayList<Produkt>();
	
	public void addProdukter(Produkt nyProdukt){
		produkter.add(nyProdukt);
	}
	
	public void addKunder(Kund nyKunder) {
		kunder.add(nyKunder);
	}

	public void removeKund(String kundnr) {
		Kund k = this.findKund(kundnr);
		if (k != null) {
			this.kunder.remove(k);
		}
	}

	public Kund findKund(String kundnr) {
		boolean svar = false;
		for (Kund k : this.kunder) {
			if (k.getKundnr().equals(kundnr)) {
				svar = true;
				return k;
				
			}
		}
		if(!svar){
			System.out.println("Hittar ingen kund");
		}
		return null;
	}
	
	public boolean findKundBoolean(String kundnr) {
		for (Kund k : this.kunder) {
			if (k.getKundnr().equals(kundnr)) {
				return true;
				
				
			}
		}
		return false;
	}
	
	public boolean findProdBoolean(String prodnr) {
		for (Produkt p : this.produkter) {
			if (p.getProduktnr().equals(prodnr)) {
				return true;
				
				
			}
		}
		return false;
	}
	
	public Produkt findProdukt(String prodnr) {
		boolean svar = false;
		for (Produkt p : this.produkter) {
			if (p.getProduktnr().equals(prodnr)) {
				svar = true;
				return p;
				
			}
		}
		if(!svar){
			System.out.println("Hittar ingen produkt");
		}
		return null;
	}
	
	public ArrayList<Kund> getKundlista(){
		return kunder;
	}
	

	
	
}
