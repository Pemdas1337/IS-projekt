//					textField_tfnnr.setText(tmpCustomer[4]);
//					textField_email.setText(tmpCustomer[5]);
//					textField_rabattniva.setText(tmpCustomer[6]);
//					textField_kontaktperson.setText(tmpCustomer[7]);
//					textField_bestallare.setText(tmpCustomer[8]);
//					
//				} else {
//					lblsvar.setText("Response: Customer not found");
//				}
			}
		});
		btnSk.setBounds(184, 111, 89, 23);
